---
layout: layouts/base.njk
section: archive
---

<header class="content-header">
    
    <div class="container">

	<h1>{{ title }}</h1>
    {{ layoutContent | safe }}

    </div>
    
</header>

<div class="content container">

    {% if 'en' in language %}
        {% set articles = collections.articles_en %}
    {% endif %}
    {% if 'de' in language %}
        {% set articles = collections.articles_de %}
    {% endif %}

    {%- for article in articles | reverse -%}
    
        <article>
            
            <a href="{{ metadata.url }}{{ article.data.permalink | url }}"><h2>{{ article.data.title }}</h2></a>
            
            <div class="excerpt">
                {{ article.data.excerpt }}
            </div>
            
            <a href="{{ metadata.url }}{{ article.data.permalink | url }}" class="readmore">{% if language %}{% if 'en' in language %}Read article{% endif %}{% if 'de' in language %}Artikel lesen{% endif %}{% endif %}</a>
        
        </article>
    
    {%- endfor -%}

</div>