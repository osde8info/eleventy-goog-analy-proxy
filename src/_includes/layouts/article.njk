---
layout: layouts/base.njk
section: article
---

<header class="content-header">
    
    <div class="container">

    <h1>{{ title }}</h1>
        
    <div class="meta">
        <time datetime="{{ date | machineDate }}">{{ date | readableDate }}</time>
        |
        <div class="categories">
            {% for tag in tags %}
                <a href="{{ metadata.url }}/{{ tag }}">#{{ tag }}</a>
            {% endfor %}
        </div>
    
    </div>

    </div>
    
</header>

<div class="content container">

    <div class="excerpt">
        {{ excerpt | safe }}
    </div>

    {{ layoutContent | safe }}

</div>

<div class="recommendations container">
    <h2>Latest Articles</h2>

    {% include "components/recommendations.njk" %}

</div>