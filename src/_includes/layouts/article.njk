---
layout: layouts/base.njk
section: article
---

<header class="content-header">
    
    <div class="container">

    <h1>{{ title }}</h1>
        
    <div class="meta">
        <time datetime="{{ date | articleMachineDate }}">{% if language %}{% if 'en' in language %}{{ date | articleHumanDate }}{% endif %}{% if 'de' in language %}{{ date | articleHumanDateDE }}{% endif %}{% endif %}</time>
        |
        <div class="categories">
            {% for tag in tags %}
                #{{ tag }}
            {% endfor %}
        </div>
    
    </div>

    </div>
    
</header>

<div class="content container">

    <div class="excerpt">
        {{ excerpt | safe }}
    </div>

    {{ layoutContent | safe }}

    {% include "components/comments.njk" %}

</div>

<div class="recommendations container">

    {% if language %}
	    {% if 'en' in language %}<h2>Latest Articles</h2>{% endif %}
	    {% if 'de' in language %}<h2>Letzte Artikel</h2>{% endif %}
    {% endif %}
    

    {% include "components/recommendations.njk" %}

</div>