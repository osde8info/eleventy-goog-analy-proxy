<div class="twitter">

<h2>Recent tweets</h2>

{%- for item in tweets -%}

    <div class="tweet row">

		{% if item.is_quote_status %}
		
			<div class="col-1-3">
				<a href="{{ metadata.social.twitter.url }}/status/{{ item.id_str }}">
					<time class="tweet-date" datetime="{{ item.created_at | tweetMachineDate }}">{{ item.created_at | tweetHumanDate }}</time>
				</a>
			</div>

			<div class="col-2-3">
			
				<div class="tweet-status row">{{ item.text | safe }}</div>

				<div class="row tweet-src">
					<div class="col-1-4">
						<img class="tweet-src-img" width="60" height="60" src="/assets/images/twitter/{{ item.quoted_status.user.screen_name | safe }}.jpg" alt="{{ item.quoted_status.user.screen_name | safe }} Twitter Profile Picture" loading="lazy" />
					</div>
					<div class="col-3-4">
						<div class="tweet-src-name">{{ item.quoted_status.user.screen_name | safe }}</div>
						<div class="tweet-src-text">{{ item.quoted_status.text | safe }}</div>
					</div>
				</div>

			</div>

		{% endif %}

		{% if item.retweeted %}
		
			<div class="col-1-3">
				<a href="{{ metadata.social.twitter.url }}/status/{{ item.id_str }}">
					<time class="tweet-date" datetime="{{ item.created_at | tweetMachineDate }}">{{ item.created_at | tweetHumanDate }}</time>
				</a>
			</div>

			<div class="col-2-3 tweet-src">

				<div class="row">
						<div class="col-1-4">
							<img class="tweet-src-img" width="60" height="60" src="/assets/images/twitter/{{ item.retweeted_status.user.screen_name | safe }}.jpg"  alt="{{ item.retweeted_status.user.screen_name | safe }} Twitter Profile Picture" loading="lazy" />
						</div>
						<div class="col-3-4">
							<div class="tweet-src-name">{{ item.retweeted_status.user.screen_name | safe }}</div>
							<div class="tweet-src-text">{{ item.retweeted_status.text | safe }}</div>
						</div>
				</div>

			</div>

		{% endif %}

		{% if not item.is_quote_status and not item.retweeted %}

			<div class="col-1-3">
				<a href="{{ metadata.social.twitter.url }}/status/{{ item.id_str }}">
					<time class="tweet-date" datetime="{{ item.created_at | tweetMachineDate }}">{{ item.created_at | tweetHumanDate }}</time>
				</a>
			</div>

			<div class="tweet-status col-2-3">{{ item.text | safe }}</div>

		{% endif %}

	</div>
    
{%- endfor -%}


</div>