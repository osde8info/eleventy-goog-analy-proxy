{% set recommendations = collections.articles %}

<ol class="recommendations-list">

    {% for article in recommendations | reverse %}
        {% if loop.index < 6 %}

        <li class="recommendations-item row">
            <time class="recommendations-date col-1-3" datetime="{{ article.data.date | articleMachineDate }}">{% if language %}{% if 'en' in language %}{{ article.data.date | articleHumanDate }}{% endif %}{% if 'de' in language %}{{ article.data.date | articleHumanDateDE }}{% endif %}{% endif %}</time>
            <div class="recommendations-title col-2-3"><a href="/{{ article.data.permalink | url }}">{{ article.data.title }}</a></span>
        </li>

        {% endif %}
    {%- endfor -%}

</ol>

