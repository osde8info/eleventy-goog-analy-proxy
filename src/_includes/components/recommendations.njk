{% set recommendations = collections.articles %}

<ol class="recommendations-list">

    {% for article in recommendations | reverse %}
        {% if loop.index < 6 %}

        <li class="recommendations-item row">
            <time class="recommendations-date col-1-3" datetime="{{ article.data.date | articleMachineDate }}">{{ article.data.date | articleHumanDate }}</time>
            <div class="recommendations-title col-2-3"><a href="/{{ article.data.permalink | url }}">{{ article.data.title }}</a></span>
        </li>

        {% endif %}
    {%- endfor -%}

</ol>