{% set mentions = webmentions.children | webmentionsByUrl(webmentionUrl) %}

{% if mentions | length %}

    <div>
	    {% for webmention in mentions %}
		    <span class="webmentions__item">
                {% include "components/webmentions.njk" %}
            </span>
	    {% endfor %}
    </div>

{% else %}

    {% if 'en' in language %}<p>No mentions yet.</p>{% endif %}
    {% if 'de' in language %}<p>Noch keine Erw√§hnungen.</p>{% endif %}
	
{% endif %}
